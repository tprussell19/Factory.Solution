@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new Machine</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, new {@class="form-label"})
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", id="name"})

  <input type="submit" value="Add Machine" class="btn btn-outline-success" />
}
<p>@Html.ActionLink("Back to All Machines", "Index")</p>